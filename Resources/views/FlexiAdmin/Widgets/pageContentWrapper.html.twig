<!-- begin MAIN PAGE CONTENT -->
<div id="page-wrapper">
    <div class="page-content">
    
        {% for _k, _alert in app.session.flashBag.all() %}
            {% set alertClass = "" %}
            {% if _k == 'alert.success' %}
                {% set alertClass = "alert-success" %}
            {% elseif _k == 'alert.error' %}
                {% set alertClass = "alert-warning" %}
            {% else %}
                {% set alertClass = "alert-danger" %}
            {% endif %}

            <div class="alert {{ alertClass }}">
                {{ _alert[0] | raw}}
            </div>

        {% endfor %}
    
        <!-- begin PAGE TITLE ROW -->
        <div class="row">
            <div class="col-lg-12">
                <div class="page-title">
                    <h1>
                        {% block page_content_title %}{% endblock %}
                    </h1>
                    <ol class="breadcrumb">
                        {% block page_content_breadcrumbs %}{% endblock %}
                    </ol>
                </div>
            </div><!-- /.col-lg-12 -->
        </div><!-- /.row -->
        <!-- end PAGE TITLE ROW -->
        
        {% block page_content_section %}{% endblock %}
        
    </div><!-- /.page-content -->
</div><!-- /#page-wrapper -->
<!-- end MAIN PAGE CONTENT -->